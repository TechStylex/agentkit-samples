{
  "swagger": "2.0",
  "info": {
    "title": "CRM系统",
    "description": "客户关系管理系统 API",
    "version": "1.0.0",
    "contact": {
      "name": "技术支持",
      "email": "support@crm-system.com"
    }
  },
  "host": "localhost:8000",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "tags": [
    {
      "name": "系统",
      "description": "系统相关接口"
    },
    {
      "name": "客户管理",
      "description": "客户信息查询接口"
    },
    {
      "name": "保修查询",
      "description": "商品保修信息查询接口"
    },
    {
      "name": "维修管理",
      "description": "维修记录管理接口"
    }
  ],
  "paths": {
    "/customers/{customer_id}": {
      "get": {
        "tags": [
          "客户管理"
        ],
        "summary": "根据客户ID查询客户信息",
        "parameters": [
          {
            "name": "customer_id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "客户ID"
          }
        ],
        "responses": {
          "200": {
            "description": "客户信息",
            "schema": {
              "$ref": "#/definitions/Customer"
            }
          },
          "401": {
            "description": "权限验证失败"
          },
          "404": {
            "description": "客户未找到"
          }
        }
      }
    },

    "/customers/{customer_id}/purchases": {
      "get": {
        "tags": [
          "客户管理"
        ],
        "summary": "查询客户历史购买记录",
        "parameters": [
          {
            "name": "customer_id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "客户ID"
          }
        ],
        "responses": {
          "200": {
            "description": "客户购买记录列表",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Product"
              }
            }
          },
          "401": {
            "description": "权限验证失败"
          },
          "404": {
            "description": "客户未找到或没有购买记录"
          }
        }
      }
    },
    "/warranty/query": {
      "post": {
        "tags": [
          "保修查询"
        ],
        "summary": "查询商品保修信息",
        "parameters": [

          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/WarrantyQuery"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "保修信息",
            "schema": {
              "$ref": "#/definitions/WarrantyResponse"
            }
          },
          "401": {
            "description": "权限验证失败"
          },
          "403": {
            "description": "客户邮箱验证失败"
          },
          "404": {
            "description": "商品或客户未找到"
          }
        }
      }
    },
    "/service/records": {
      "post": {
        "tags": [
          "维修管理"
        ],
        "summary": "创建维修记录",
        "parameters": [

          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/ServiceRecordCreate"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "创建的维修记录",
            "schema": {
              "$ref": "#/definitions/ServiceRecord"
            }
          },
          "401": {
            "description": "权限验证失败"
          },
          "404": {
            "description": "商品未找到"
          }
        }
      },
      "get": {
        "tags": [
          "维修管理"
        ],
        "summary": "查询维修记录",
        "parameters": [

          {
            "name": "serial_number",
            "in": "query",
            "required": false,
            "type": "string",
            "description": "商品序列号"
          },
          {
            "name": "customer_id",
            "in": "query",
            "required": false,
            "type": "string",
            "description": "客户ID"
          },
          {
            "name": "status",
            "in": "query",
            "required": false,
            "type": "string",
            "enum": [
              "scheduled",
              "completed",
              "cancelled"
            ],
            "description": "维修状态"
          }
        ],
        "responses": {
          "200": {
            "description": "维修记录列表",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/ServiceRecord"
              }
            }
          },
          "401": {
            "description": "权限验证失败"
          }
        }
      }
    },
    "/service/records/{record_id}": {
      "put": {
        "tags": [
          "维修管理"
        ],
        "summary": "更新维修记录",
        "parameters": [

          {
            "name": "record_id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "维修记录ID"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/ServiceRecordUpdate"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "更新后的维修记录",
            "schema": {
              "$ref": "#/definitions/ServiceRecord"
            }
          },
          "401": {
            "description": "权限验证失败"
          },
          "404": {
            "description": "维修记录未找到"
          }
        }
      },
      "delete": {
        "tags": [
          "维修管理"
        ],
        "summary": "删除维修记录",
        "parameters": [

          {
            "name": "record_id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "维修记录ID"
          }
        ],
        "responses": {
          "200": {
            "description": "删除成功",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          },
          "401": {
            "description": "权限验证失败"
          },
          "404": {
            "description": "维修记录未找到"
          }
        }
      }
    }
  },
  "definitions": {
    "Customer": {
      "type": "object",
      "properties": {
        "customer_id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "phone": {
          "type": "string"
        },
        "address": {
          "type": "string"
        },
        "registration_date": {
          "type": "string",
          "format": "date"
        },
        "date_of_birth": {
          "type": "string",
          "format": "date"
        },
        "notes": {
          "type": "string"
        },
        "total_purchases": {
          "type": "integer"
        },
        "lifetime_value": {
          "type": "number",
          "format": "float"
        },
        "support_cases_count": {
          "type": "integer"
        },
        "communication_preferences": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "Product": {
      "type": "object",
      "properties": {
        "product_id": {
          "type": "string"
        },
        "serial_number": {
          "type": "string"
        },
        "product_name": {
          "type": "string"
        },
        "customer_id": {
          "type": "string"
        },
        "purchase_date": {
          "type": "string",
          "format": "date"
        },
        "warranty_end_date": {
          "type": "string",
          "format": "date"
        },
        "warranty_type": {
          "type": "string"
        },
        "status": {
          "type": "string"
        }
      }
    },
    "CustomerQuery": {
      "type": "object",
      "properties": {
        "customer_id": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "phone": {
          "type": "string"
        }
      }
    },
    "WarrantyQuery": {
      "type": "object",
      "properties": {
        "serial_number": {
          "type": "string"
        },
        "customer_email": {
          "type": "string",
          "format": "email"
        }
      },
      "required": [
        "serial_number"
      ]
    },
    "WarrantyResponse": {
      "type": "object",
      "properties": {
        "product_name": {
          "type": "string"
        },
        "serial_number": {
          "type": "string"
        },
        "customer_name": {
          "type": "string"
        },
        "purchase_date": {
          "type": "string",
          "format": "date"
        },
        "warranty_end_date": {
          "type": "string",
          "format": "date"
        },
        "warranty_type": {
          "type": "string"
        },
        "status_text": {
          "type": "string"
        }
      }
    },
    "ServiceRecord": {
      "type": "object",
      "properties": {
        "record_id": {
          "type": "string"
        },
        "serial_number": {
          "type": "string"
        },
        "customer_id": {
          "type": "string"
        },
        "service_date": {
          "type": "string",
          "format": "date-time"
        },
        "service_type": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "technician": {
          "type": "string"
        },
        "estimated_duration": {
          "type": "integer"
        }
      },
      "required": [
        "serial_number",
        "service_type",
        "description",
        "technician",
        "service_date",
        "estimated_duration"
      ]
    },
    "ServiceRecordUpdate": {
      "type": "object",
      "properties": {
        "service_date": {
          "type": "string",
          "format": "date-time"
        },
        "status": {
          "type": "string",
          "enum": [
            "scheduled",
            "completed",
            "cancelled"
          ]
        },
        "actual_duration": {
          "type": "integer"
        },
        "notes": {
          "type": "string"
        }
      }
    },
    "ServiceRecordCreate": {
      "type": "object",
      "properties": {
        "serial_number": {
          "type": "string"
        },
        "service_type": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "technician": {
          "type": "string"
        },
        "service_date": {
          "type": "string",
          "format": "date-time"
        },
        "estimated_duration": {
          "type": "integer"
        }
      },
      "required": [
        "serial_number",
        "service_type",
        "description",
        "technician",
        "service_date",
        "estimated_duration"
      ]
    }
  }
}